n=7
*
 * *
   * * *
     * * * *
   * * *
 * *
*
n=int(input())
i=1
p=n//2
while i<=p:
    sp=1
    while sp<=(i-1):
        print(' ',end='')
        sp=sp+1
    j=1
    while j<=i:
        print('* ',end='')
        j=j+1
    print()
    i=i+1
k=(n+1)/2
while k<=n:
    l=1
    while l<=n-k:
        print(' ',end='')
        l=l+1
    m=1
    while m<=(n-k+1):
        print('* ',end='')
        m=m+1
    print()
    k=k+1
